{% extends 'base.html.twig' %}

{% block body %}

<div class="container"></div>
    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey }}
        </div>
    {% endif %}

    <div class="row">
        <div class="col-3 col-md-3 push-md-9 ">
          
        </div>
        <div class="col-6 col-md-6 pull-md-3 ">


                <div class="card mx-auto" style="margin-top :20px">
                        <div class="card-body">
                          <h5 class="card-title">Connexion</h5>
                          <form action="{{ path('security_login') }}" method="post">
                                <fieldset>
                                   
                                    <div class="form-group">
                                        <label for="username">Username</label>
                                        <input type="text" id="username" name="_username" class="form-control"/>
                                    </div>
                                    <div class="form-group">
                                        <label for="password">Mot de passe</label>
                                        <input type="password" id="password" name="_password" class="form-control" />
                                    </div>
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fa fa-sign-in" aria-hidden="true"></i> On entre
                                    </button>
                                </fieldset>
                            </form>
                        </div>
                      </div>
                
            
        </div>

</div>      
{% endblock %}